{
  "name": "create-react-app",
  "version": "1.0.0",
  "private": true,
  "keywords": [
    "MERN",
    "React",
    "MongoDb",
    "Express",
    "NodeJS"
  ],
  "author": "Popov Alexander, Popov Daniil, Volozhanin Stanislav, Baygulov Dmitri, Golenzev Yakov",
  "license": "MIT",
  "description": "Tinkoff-messenger MERN applcation for learn",
  "main": "app.js",
  "scripts": {
    "start": "npm run prod",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist/bin/server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm-run-all transpile server\" \"npm run client\"",
    "prod": "npm run build",
    "transpile": "babel ./server --out-dir dist",
    "clean": "rimraf dist",
    "watch:dev": "nodemon"
  },
  "dependencies": {
    "concurrently": "^5.1.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "nodemon": "^2.0.2",
    "rimraf": "^3.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  }
}
